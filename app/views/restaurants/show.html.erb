<p id="notice"><%= notice %></p>

<div>
  <% if user_signed_in? %>
    <% if Restaurant.isFavorite(current_user, @restaurant) %>
      <h2 class="link"><%= button_to 'Remove Favorite', toggleFavorite_path(:restaurant => @restaurant) %></h2>
    <% else %>
      <h2 class="link"><%= button_to 'Add Favorite', toggleFavorite_path(:restaurant => @restaurant) %></h2>
    <% end %>
  <% end %>
</div>

<div class="show-wrapper">
  <div class="show-info"><%= @restaurant.name %></div>
  <div class="show-info"><%= @restaurant.location %></div>
  <div>Upvotes</div>
  <div>Downvotes</div>
  <div class="votes"><%= Restaurant.showUpvote(@restaurant.id) %></div>
  <div class="votes"><%= Restaurant.showDownvote(@restaurant.id) %></div>
</div>

<div>
  <% if user_signed_in? %>
    <h2 class="link"><%= link_to 'Add Comment', newComment_path(:restaurant => @restaurant) %></h2>
  <% end %>
</div>

<table class="index-table">
  <thead>
    <tr>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.fullComment %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<div class="show-footer">
  <%= link_to 'Back', restaurants_path %>
</div>


