<p id="notice"><%= notice %></p>

<div class="navigation">
  <%= link_to 'New Restaurant', new_restaurant_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Restaurant Name</th>
      <th>Location</th>
      <th colspan="2">Vote Results<br>Up Down</th>
      <th colspan="2">Vote!</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.upvote %></td>
        <td><%= restaurant.downvote %></td>
        <td><%= button_to "Will Split", { action: "new" } %></td>
        <td><%= button_to "Won't Split", { action: "new" } %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

